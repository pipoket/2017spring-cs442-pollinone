<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_voting"
    tools:context="com.cs442.sexysuckzoo.pollinone.Voting">

    <TextView
        android:id="@+id/currentChoiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choice #1"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/currentVoteTextView"
        app:layout_constraintLeft_toLeftOf="@+id/activity_voting"
        app:layout_constraintRight_toRightOf="@+id/activity_voting"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/currentVoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Now voting for nothing"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/toggleButton"
        app:layout_constraintLeft_toLeftOf="@+id/activity_voting"
        app:layout_constraintRight_toRightOf="@+id/activity_voting"
        android:layout_marginBottom="10dp"/>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="Vote For This"
        android:textOff="Not vote"
        android:textOn="Vote"
        android:textSize="50sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
